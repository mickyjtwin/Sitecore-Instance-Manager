<UserControl x:Class="SIM.Tool.Windows.UserControls.Download8.Login" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="269" d:DesignWidth="421">
  <StackPanel Grid.Row="1" Margin="0">
    <TextBlock Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Name="TextBlock" TextWrapping="Wrap" TextAlignment="Justify" />
    <!-- Background="#FFF0F0F0" -->
    <WebBrowser Name="webBrowser" Width="0" Height="0" />
    <TextBlock TextWrapping="Wrap" HorizontalAlignment="Stretch" TextAlignment="Justify" Margin="0" Padding="0">
      <Bold>SDN User Name</Bold> - your email address 
    </TextBlock>
    <TextBox Name="UserName" HorizontalAlignment="Stretch" Margin="0 4 0 4" />
    <TextBlock TextWrapping="Wrap"  HorizontalAlignment="Stretch" TextAlignment="Justify" Padding="0">
      <Bold>SDN Password</Bold> - your password
    </TextBlock>
    <PasswordBox Name="Passowrd" HorizontalAlignment="Stretch" Margin="0 4 0 4" Height="24" />
    <TextBlock TextWrapping="Wrap"  HorizontalAlignment="Stretch" TextAlignment="Justify" Padding="0" Foreground="Red">
      <LineBreak />
      <Bold>IT WILL NOT BE STORED OUTSIDE OF THIS DOWNLOADING SESSION</Bold>
    </TextBlock>
  </StackPanel>	
</UserControl>
